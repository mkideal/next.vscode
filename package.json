{
	"name": "nextlang",
	"displayName": "Next Lang",
	"description": "Language support for Next and Next Template NPL (Based on Go Template)",
	"version": "0.0.17",
	"publisher": "nextlangorg",
	"icon": "res/icons/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/mkideal/next.vscode.git"
	},
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:next",
		"onLanguage:npl"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configurationDefaults": {
			"[next]": {
				"editor.insertSpaces": false,
				"editor.tabSize": 4
			},
			"[npl]": {
				"editor.insertSpaces": false,
				"editor.tabSize": 4
			}
		},
		"configuration": {
			"type": "object",
			"title": "Next Lang Configuration",
			"properties": {
				"nextls.executablePath": {
					"type": "string",
					"default": "nextls",
					"description": "Path to the Next Language Server executable"
				},
			}
		},
		"languages": [
			{
				"id": "next",
				"aliases": ["Next", "next"],
				"extensions": [".next"],
				"configuration": "./next-language-configuration.json"
			},
			{
				"id": "npl",
				"aliases": ["NPL", "npl"],
				"extensions": [".npl"],
				"configuration": "./tmpl-language-configuration.json"
			},
			{
				"id": "yaml",
				"extensions": [".nextproj"]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/node": "^14.14.31",
		"typescript": "^4.3.5"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	}
}
